# ------------------------------------------------------------------------------
# Provider Configuration (example values only)
# ------------------------------------------------------------------------------

vast_username              = "your_vast_username"
vast_password              = "your_vast_password"   # <-- Sensitive, don't commit to source control
vast_host                  = "vast-cluster.example.com"
vast_port                  = "443"
vast_skip_ssl_verify       = true
vast_version_validation_mode = "warn"

# ------------------------------------------------------------------------------
# VIP Pool 1 Configuration
# ------------------------------------------------------------------------------

vip1_name      = "vip-pool-1"
vip1_startip   = "10.0.1.10"
vip1_endip     = "10.0.1.20"
gw1            = "10.0.1.1"
role1          = "role-frontend-1"

# ------------------------------------------------------------------------------
# VIP Pool 2 Configuration
# ------------------------------------------------------------------------------

vip2_name      = "vip-pool-2"
vip2_startip   = "10.0.2.10"
vip2_endip     = "10.0.2.20"
gw2            = "10.0.2.1"
role2          = "role-frontend-2"

# ------------------------------------------------------------------------------
# Shared Network Settings
# ------------------------------------------------------------------------------

cidr           = "10.0.0.0/16"

# ------------------------------------------------------------------------------
# View Policy and NFS View Settings
# ------------------------------------------------------------------------------

policy_name    = "example-nfs-policy"
num_views      = 3
path_name      = "nfs_share_"
